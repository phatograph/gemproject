<div class="row">
  <div class="col-xs-12 col-sm-7 col-sm-offset-2 col-md-5 col-md-offset-3">
    <div class="page-header">
      <h2>Forgot your password?</h2>
    </div>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :email, :class => 'col-xs-3 text-right control-label' %>
        <div class="col-xs-9">
          <%= f.email_field :email, :autofocus => true, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-9 col-xs-offset-3">
          <%= f.submit "Reset password", :class => 'btn btn-primary' %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
