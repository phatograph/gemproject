<div class="page-header">
  <h2>Users</h2>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Add new user', 'users/new', :class => 'btn btn-success pull-right' %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Employee Number</th>
      <th>Position</th>
      <th>Department</th>
      <th>#</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="user in users">
      <td>{{user.firstName}}</td>
      <td>{{user.email}}</td>
      <td>{{user.employeeNumber}}</td>
      <td>{{user.position}}</td>
      <td>{{user.department}}</td>
      <td><a href="#" ng-really-click="deleteUser(user)" class="btn btn-danger btn-xs" >Delete</a></td>
    </tr>
  </tbody>
</table>

