<div class="page-header">
  <h2>
    <span>Users</span>
    <a ng-show="users[0]._createable" ng-href="{{ path('UserNewCtrl') }}" class="btn btn-success pull-right">Add new user</a>
  </h2>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Employee No.</th>
      <th>Position</th>
      <th>Department</th>
      <th>#</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="user in users | orderBy:'fullName'">
      <td>{{user.fullName}}</td>
      <td>{{user.email}}</td>
      <td>{{user.employeeNumber}}</td>
      <td>{{user.position}}</td>
      <td>{{user.department}}</td>
      <td>
        <a ng-href="{{ path('UserEditCtrl', { userId: user.id }) }}" ng-show="user._updateable" class="btn btn-default btn-xs"><i class="fa fa-pencil"></i></a>
        <a href="#" ng-show="user._deleteable" ng-really-click="deleteUser(user)" class="btn btn-danger btn-xs" ><i class="fa fa-trash-o"></i></a>
      </td>
    </tr>
  </tbody>
</table>

