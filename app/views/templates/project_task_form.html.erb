<div class="page-header">
  <h2>{{task.id ? 'Edit ' : 'Add new'}} task of {{ project.name }}</h2>
</div>

<div class="row">
  <div class="col-xs-6 col-xs-offset-2">
    <form class="form-horizontal">
      <%= render :partial => 'templates/forms/text', :object => 'name', :locals => {:model => 'task'} %>
      <div class="form-group">
        <div class="col-xs-offset-3 col-xs-9">
          <button ng-click="saveTask()" type="submit" class="btn btn-success">Submit</button>
          <a ng-href="{{ path('ProjectTaskIndexCtrl', { projectId: project.id }) }}" class="btn btn-default">Back</a>
        </div>
      </div>
    </form>
  </div>
</div>
