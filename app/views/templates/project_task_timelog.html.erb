<ol class="breadcrumb">
  <li><a ng-href="{{ path('UserIndexCtrl') }}">Dashboard</a></li>
  <li class="active">Projects</li>
  <li class="active">{{ project.name }}</li>
  <li><a ng-href="{{ path('ProjectTaskIndexCtrl', { projectId: project.id }) }}">Tasks</a></li>
  <li class="active" ng-hide="task.id">New</li>
  <li class="active" ng-show="task.id">{{ task.name }}</li>
</ol>

<div class="page-header">
  <h2>Time logs</h2>
</div>

<div ng-repeat="assignment in assignments">
  {{ assignment.user.fullName }} ({{ assignment.totalTime }})
  <a href="#" ng-hide="false && assignment.running" ng-click="startTimelog(assignment)">Start task</a>
  <a href="#" ng-show="true || assignment.running" ng-click="stopTimelog(assignment)">Stop task</a>
  <ul>
    <li ng-repeat="timelog in assignment.timelogs">{{ timelog.startedAt }} : {{ timelog.endedAt }}</li>
  </ul>
</div>
