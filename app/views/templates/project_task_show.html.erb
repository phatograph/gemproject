<ol class="breadcrumb">
  <li><a ng-href="{{ path('UserIndexCtrl') }}">Dashboard</a></li>
  <li class="active">Projects</li>
  <li class="active">{{ project.name }}</li>
  <li><a ng-href="{{ path('ProjectTaskIndexCtrl', { projectId: project.id }) }}">Tasks</a></li>
  <li class="active" ng-hide="task.id">New</li>
  <li class="active" ng-show="task.id">{{ task.name }}</li>
</ol>

<div class="page-header">
  <h2 class="clearfix">
    {{ task.name }}
    <div class="btn-group">
      <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">
        <i class="text-muted fa fa-caret-down"></i>
      </a>
      <ul class="dropdown-menu" role="menu">
        <li><a ng-href="{{ path('ProjectTaskEditCtrl', { projectId: project.id, taskId: task.id }) }}" ng-show="task._updateable">Edit</a></li>
        <li><a href="#" ng-show="task._deleteable" ng-really-click="deleteTask()">Delete</a></li>
      </ul>
    </div>
    <small ng-bind="task.statusText"></small>
    <div class="pull-right">
      <a href="#" class="btn btn-success" ng-show="my_assignment._startable" ng-click="startTimelog(my_assignment)">Start task</a>
      <a href="#" class="btn btn-danger" ng-show="my_assignment._stoppable" ng-click="stopTimelog(my_assignment)">Stop task</a>
    </div>
  </h2>
</div>

<div class="row">
  <div class="col-xs-7" >
    <div ng-hide="task.editting" ng-bind-html="task.contentHtml | trustAsHtml">
    </div>
    <div ng-show="task.editting">
      <form class="form-horizontal">
        <%= render :partial => 'templates/forms/text', :object => 'name', :locals => {:model => 'task'} %>
        <div class="form-group">
          <label class="col-xs-3 control-label">Content</label>
          <div class="col-xs-9">
            <textarea class="form-control" rows="10" ng-model="task.content">{{ task.content }}</textarea>
          </div>
        </div>
        <div class="form-group">
          <label class="col-xs-3 control-label">Status</label>
          <div class="col-xs-9">
            <select class="form-control" ng-model="task.status" ng-options="status.id as status.name for status in <%= Task.statuses_object.to_json %>"></select>
          </div>
        </div>
        <div class="form-group" ng-show="task.id && assignments.length != memberships.length">
          <label class="col-xs-3 control-label">Assign members</label>
          <div class="col-xs-9">
            <select assignment-dropdown class="form-control" ng-model="assignment" ng-options="membership.user.fullName for membership in memberships | orderBy: 'fullName' | filter: nonAssignees"></select>
          </div>
        </div>
        <div class="form-group" ng-show="task.id">
          <label class="col-xs-3 control-label">Assignees</label>
          <div class="col-xs-9">
            <p class="form-control-static text-muted" ng-hide="assignments.length"><span class="btn btn-default btn-xs"><i class="fa fa-user"></i></span> No assignees yet.</p>
            <div class="form-control-static clearfix user-list">
              <div class="btn btn-default" ng-repeat="assignment in assignments | orderBy: 'user.fullName'">
                {{ assignment.user.fullName }}
                <a href="#" class="text-danger" ng-really-click="deleteAssignment(assignment)"><i class="fa fa-times"></i></a>&nbsp;
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-offset-3 col-xs-9">
            <a href="#" ng-click="saveTask()" ng-show="task.editting" class="btn btn-success">Save</a>
            <a href="#" ng-click="refreshPage()" ng-show="task.editting" class="btn btn-default">Cancel</a>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="col-xs-4 col-xs-offset-1">
    <div ng-repeat="assignment in assignments">
      <h4 class="timelog clearfix">
        {{ assignment.user.fullName }}
        <div class="pull-right">
          <span class="btn">{{ assignment.totalTime }}<span ng-show="assignment.running">+</span></span>
        </div>
      </h4>
      <div class="panel panel-timelog" ng-class="{ 'panel-running': timelog.endedAt == null }" ng-repeat="timelog in assignment.timelogs | orderBy: '-id'">
        <div class="panel-heading">
          <span class="btn-xs" title="{{ timelog.startedAt | amDateFormat: 'dddd, MMMM Do YYYY, H:mm:ss' }}">{{ timelog.startedAt | amDateFormat: 'MMM D, YYYY H:mm' }}</span>
          <i class="btn-xs fa fa-long-arrow-right"></i>
          <span class="btn-xs" title="{{ timelog.endedAt | amDateFormat: 'dddd, MMMM Do YYYY, H:mm:ss' }}" ng-show="timelog.endedAt">{{ timelog.endedAt | amDateFormat: 'MMM D, YYYY H:mm' }}</span>
          <em class="btn-xs" ng-hide="timelog.endedAt">Running</em>
          <div class="pull-right">
            <strong class="btn-xs">{{ timelog.totalTime }}</strong>
            <div class="btn-group">
              <a href="#" class="btn-xs dropdown-toggle" data-toggle="dropdown">
                <i class="text-success fa fa-caret-down"></i>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li ng-hide="timelog.editting == true"><a href="#" ng-click="timelog.editting = true">Edit</a></li>
                <li><a href="#" ng-really-click="deleteTimelog(timelog)">Delete</a></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="panel-body" ng-show="timelog.editting">
          <div class="form">
            <div class="form-group">
              <label>From</label>
              <div class="dropdown">
                <div class="dropdown-toggle" id="startedAt-{{ timelog.id }}" data-toggle="dropdown">
                  <div class="input-group">
                    <input type="text" class="form-control" value="{{ timelog.startedAt | amDateFormat: 'MMM D, YYYY H:mm' }}">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                  </div>
                </div>
                <ul class="dropdown-menu">
                  <datetimepicker data-ng-model="timelog.startedAt" data-datetimepicker-config="{ dropdownSelector: '#startedAt-{{ timelog.id }}' }"/>
                </ul>
              </div>
            </div>
            <div class="form-group">
              <label>To</label>
              <div class="dropdown">
                <div class="dropdown-toggle" id="endedAt-{{ timelog.id }}" data-toggle="dropdown">
                  <div class="input-group">
                    <input type="text" class="form-control" value="{{ timelog.endedAt | amDateFormat: 'MMM D, YYYY H:mm' }}">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                  </div>
                </div>
                <ul class="dropdown-menu">
                  <datetimepicker data-ng-model="timelog.endedAt" data-datetimepicker-config="{ dropdownSelector: '#endedAt-{{ timelog.id }}' }"/>
                </ul>
              </div>
            </div>
            <div class="form-group">
              <button ng-click="saveTimelog(timelog)" type="submit" class="btn btn-success">Save</button>
              <a ng-click="refreshPage()" class="btn btn-default">Close without saving</a>
            </div>
          </div>
        </div>
      </div>
      <div class="panel panel-timelog " ng-hide="assignment.timelogs.length">
        <div class="panel-heading text-center">
          <em class="btn-xs">No time logging yet</em>
        </div>
      </div>
    </div>
  </div>
</div>
