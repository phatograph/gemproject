<div class="page-header">
  <h2>Tasks of {{ project.name }}</h2>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>#</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="task in tasks | orderBy: 'name'">
      <td>{{ task.name }}</td>
      <td class="td-control">
        <a href="#" ng-show="true" ng-really-click="deleteTask(task)" class="btn btn-danger btn-xs" ><i class="fa fa-trash-o"></i></a>
      </td>
    </tr>
  </tbody>
</table>

